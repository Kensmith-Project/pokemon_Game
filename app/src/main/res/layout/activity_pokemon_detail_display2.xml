    <TextView
        android:id="@+id/iv_moves_num"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="60dp"
        android:text="20"
       android:textColor="@color/pink"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/iv_moves"
        app:layout_constraintTop_toBottomOf="@+id/card_view1" />

    <TextView
        android:id="@+id/iv_base_experience"
        android:layout_width="10dp"
        android:layout_height="15dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="38dp"
        android:text="10"

        android:textColor="@color/orange_red"
        app:layout_constraintStart_toEndOf="@+id/iv_overgrow"
        app:layout_constraintTop_toBottomOf="@+id/iv_moves_num" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="KG"
        android:textColor="@color/orange"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/iv_weight_num"
        app:layout_constraintTop_toBottomOf="@id/card_view1" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="metre"
        android:textColor="@color/orange"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/iv_meters"
        app:layout_constraintTop_toBottomOf="@id/textView6" />


</androidx.constraintlayout.widget.ConstraintLayout>