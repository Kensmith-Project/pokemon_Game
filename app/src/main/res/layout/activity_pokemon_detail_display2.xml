<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_light"
    tools:context=".pokemonDetail.PokemonDetailDisplay">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        app:cardCornerRadius="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/iv_name_onepoke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:text="Gisuar"
                android:textColor="@color/gray"
                android:textFontWeight="2000"
                android:textSize="30dp"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/IV_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:text="ID:"
                android:textColor="@color/black"
                android:textFontWeight="900"
                android:textSize="25dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_name_onepoke" />

            <ImageView
                android:id="@+id/iv_one_poke_image"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@color/beauty_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_launcher_background"
                tools:layout_editor_absoluteX="207dp"
                tools:layout_editor_absoluteY="31dp" />

            <TextView
                android:id="@+id/iv_id_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="16dp"
                android:text="4"
                android:textColor="@color/orange"
                android:textSize="25dp"
                app:layout_constraintStart_toEndOf="@+id/IV_ID"
                app:layout_constraintTop_toBottomOf="@+id/iv_name_onepoke" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/iv_moves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:text="Order:"
        android:textSize="18dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view1" />

    <TextView
        android:id="@+id/iv_overgrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:text="Experience:"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_moves" />

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_manweight_img"
        app:layout_constraintVertical_bias="0.263">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/iv_title_stats"

                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="16dp"
                android:text="STATS"
                android:textColor="@color/black"
                android:textFontWeight="1000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/iv_health"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Poison"
                android:textColor="@color/black"
                android:textFontWeight="900"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_title_stats" />

            <TextView
                android:id="@+id/iv_attack"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="Attack"
                android:textColor="@color/black"
                android:textFontWeight="900"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_health" />

            <TextView
                android:id="@+id/iv_defense"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="Defense"
                android:textColor="@color/black"
                android:textFontWeight="900"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_attack" />

            <TextView
                android:id="@+id/iv_special_attack"
                android:layout_width="wrap_content"

                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"

                android:text="Special Attack"
                android:textColor="@color/black"
                android:textFontWeight="900"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_defense" />

            <TextView
                android:id="@+id/special_defense"
                android:layout_width="wrap_content"
                 android:layout_height="25dp"

                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"

                android:text="Specail Defense"
                android:textColor="@color/black"
                android:textFontWeight="900"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_special_attack" />

            <TextView
                android:id="@+id/iv_speed"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="Speed"

                android:textColor="@color/black"
                android:textFontWeight="900"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/special_defense" />
            <TextView
                android:id="@+id/iv_hp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="Hp"

                android:textColor="@color/black"
                android:textFontWeight="900"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_speed" />

            <ProgressBar

                android:id="@+id/iv_health_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:progress="50"
                android:progressTint="@color/purple_light"
                app:cornerRadius="7dp"
                app:layout_constraintStart_toEndOf="@+id/iv_health"
                app:layout_constraintTop_toBottomOf="@+id/iv_title_stats" />

            <ProgressBar

                android:id="@+id/progressBar_iv_attack"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                android:progress="50"
                android:progressTint="@color/orange"
                app:cornerRadius="7dp"
                app:layout_constraintStart_toEndOf="@+id/iv_attack"
                app:layout_constraintTop_toBottomOf="@+id/iv_health_progressBar" />

            <ProgressBar

                android:id="@+id/progressBar_iv_defense"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:progress="50"
                android:progressTint="@color/pink"
                app:cornerRadius="7dp"
                app:layout_constraintStart_toEndOf="@+id/iv_defense"
                app:layout_constraintTop_toBottomOf="@+id/progressBar_iv_attack" />



            <ProgressBar

                android:id="@+id/progressBar_iv_special_attack"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="280dp"
                android:layout_height="25dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:progress="50"
                android:progressTint="@color/teal_thick"
                app:cornerRadius="7dp"
                app:layout_constraintStart_toEndOf="@+id/iv_special_attack"
                app:layout_constraintTop_toBottomOf="@+id/progressBar_iv_defense" />

            <ProgressBar
                android:id="@+id/iv_progress_special_defense"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="280dp"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:progress="50"
                android:progressTint="@color/orange_red"
                app:cornerRadius="7dp"
                app:layout_constraintStart_toEndOf="@+id/special_defense"
                app:layout_constraintTop_toBottomOf="@+id/progressBar_iv_special_attack" />

            <ProgressBar
                android:id="@+id/progressBar_iv_speed"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="280dp"
                android:layout_height="25dp"
                android:layout_marginStart="76dp"
                android:progress="50"
                android:progressTint="@color/purple_thick_blue"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@+id/iv_speed"
                app:layout_constraintTop_toBottomOf="@+id/iv_progress_special_defense" />

            app:layout_constraintTop_toBottomOf="@+id/progressBar_iv_special_attack" />

            <ProgressBar
                android:id="@+id/progressBar_iv_hp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="280dp"
                android:layout_height="25dp"
                android:layout_marginStart="76dp"
                android:layout_marginTop="8dp"
                android:progress="50"
                android:progressTint="@color/green"

                app:layout_constraintStart_toEndOf="@+id/iv_speed"
                app:layout_constraintTop_toBottomOf="@+id/progressBar_iv_speed" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/iv_img_weight"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="204dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view1"
        app:srcCompat="@drawable/istockphoto" />

    <ImageView
        android:id="@+id/iv_manweight_img"
        android:layout_width="82dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="196dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_img_weight"
        app:srcCompat="@drawable/man_height" />

    <TextView
        android:id="@+id/iv_weight_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:textSize="20dp"
        android:text="Weight:"
        android:textColor="@color/black"
        android:textFontWeight="700"
        app:layout_constraintStart_toEndOf="@id/iv_img_weight"
        app:layout_constraintTop_toBottomOf="@id/card_view1" />

    <TextView
        android:id="@+id/iv_height_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="80dp"
        android:text="Height:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textFontWeight="1000"
        app:layout_constraintStart_toEndOf="@id/iv_manweight_img"
        app:layout_constraintTop_toBottomOf="@id/iv_weight_name" />

    <TextView
        android:id="@+id/iv_weight_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="32dp"
        android:text="15kg"
        android:textColor="@color/white"
        android:textSize="20dp"
       app:layout_constraintEnd_toStartOf="@id/textView6"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toEndOf="@id/iv_weight_name"
        app:layout_constraintTop_toBottomOf="@id/card_view1" />

    <TextView
        android:id="@+id/iv_meters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:text="Metres"
        android:textColor="@color/white"
        android:textSize="20dp"

        app:layout_constraintStart_toEndOf="@+id/iv_height_name"
        app:layout_constraintTop_toBottomOf="@+id/iv_weight_num" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:text="ATTRIBUTES"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="italic"
        android:textFontWeight="700"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_view1" />

